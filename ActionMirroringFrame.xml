 <Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <Script file="ActionMirroringFrame.lua"/>
    <Frame name="ActionMirroringFrame" parent="UIParent" movable="true">
        <Size x="48" y="48"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Scripts>
            <OnLoad>
                this.eventHandler = ActionMirroringFrame_eventHandler
                this:RegisterEvent("ADDON_LOADED")
                this:RegisterEvent("PLAYER_LOGIN")
                this.current = {}
                this.id = 0
            </OnLoad>
            <OnEvent>
                local handle = this.eventHandler[event]
                if handle then handle(this) end
            </OnEvent>
        </Scripts>
        <Frames>
            <Button name="$parentHandle" hidden="true" setallpoints="true">
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture name="$parentTex" file="Interface\AddOns\ActionMirroringFrame\amf-handle.tga">
                        </Texture>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnDragStart>
                        this:GetParent():StartMoving()
                    </OnDragStart>
                    <OnDragStop>
                        this:GetParent():StopMovingOrSizing()
                    </OnDragStop>
                    <OnLoad>
                        this:RegisterForDrag("LeftButton")
                    </OnLoad>
                    <OnClick>
                        ActionMirroringFrame_onClick()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>
